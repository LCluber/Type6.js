        | Documentation
      ul(class="list-group" id=index)
        each val, index in menu
          li(class="list-group-item nav-item")
            if val.params
              a(href='#' class=name === val.path ? "nav-link active" : "nav-link")= index
            else
              = index
              ul(class="list-group" id=index)
                each val2, index2 in val
                  li(class="list-group-item nav-item")
                    if val2.params
                      a(href='#' class=name === val2.path ? "nav-link active" : "nav-link")= index2
                    else
                      = index2
                      ul(class="list-group" id=index2)
                        each val3, index3 in val2
                          li(class="list-group-item nav-item")
                            if val3.params
                              a(href= val3.params?index+'_'+index2+'_'+index3+'.html':'#' class=name === val3.path ? "nav-link active" : "nav-link")= index3
                            else
                              = index3
                              ul(class="list-group" id=index3)
                                each val4, index4 in val3
                                  li(class="list-group-item nav-item")
                                    a(href= val4.params?index+'_'+index2+'_'+index3+'_'+index4+'.html':'#' class=name === val4.path ? "nav-link active" : "nav-link")= index4