extends _layout

block content

  h2= doc.class + '.' + doc.name + '()'

  p= doc.description

  h3 Parameters

  if doc.params.length
    table(class="table table-sm")
      thead
        tr
          th(scope="col") 
          th(scope="col") Name
          th(scope="col") Type
          th(scope="col") Description
      tbody
        each val, index in doc.params
          tr
            th(scope="row")= index+1
            td= val.name
            td= val.type
            td= val.description
          
  else
    p None

  h3 Return value

  p= doc.return.type
  p= doc.return.description

  h3 Usage

  pre
    code(class="hljs javascript")!= usage